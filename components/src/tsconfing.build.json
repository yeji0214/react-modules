{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["DOM", "ESNext"],
      "declaration": true,
      "declarationDir": "dist",
      "emitDeclarationOnly": true,
      "outDir": "dist",
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "Node",
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "strict": true
    },
    "include": ["src"]
  }
  